{
  "bsonType": "object",
  "required": [],
  "permission": {
    "read": true,
    "create": "auth.uid != null",
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "title": {
      "bsonType": "string",
      "errMessage": "必须要有个标题",
      "trim": "both"
    },
    "content": {
      "bsonType": "string",
      "title": "内容",
      "description": "文章内容"
    },
    "hits": {
      "bsonType": "number",
      "title": "点赞数",
      "description": "文章的点赞数量",
      "defaultValue": 233
    },
    "user_id": {
      "bsonType": "string",
      "title": "用户id",
      "description": "外键：链接到用户表的_id",
      "foreignKey": "uni-id-users._id",
      "defaultValue": {
        "$env": "uid"
      }
    },
    "createDate": {
      "bsonType": "timestamp",
      "title": "发布时间",
      "description": "文章初始发布时间",
      "defaultValue": {
        "$env": "now"
      },
      "permission": {
        "read": true,
        "create": true,
        "write": false,
        "delete": false
      }
    }
  }
}